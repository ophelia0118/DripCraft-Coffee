/* setup.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.setup-form {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.form-input {
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.brewing-steps-section {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #6F4E37;
}

.brewing-steps {
  margin-bottom: 20rpx;
}

.step-item {
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.step-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.step-number {
  font-weight: bold;
  color: #6F4E37;
}

.step-delete {
  color: #E74C3C;
  font-size: 26rpx;
}

.step-content {
  display: flex;
  flex-direction: column;
}

.step-time-input, .step-desc-input {
  margin-bottom: 15rpx;
}

.add-step {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border: 1rpx dashed #6F4E37;
  border-radius: 10rpx;
  color: #6F4E37;
  font-size: 28rpx;
}

.add-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.btn {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
  border-radius: 50rpx;
  padding: 15rpx 0;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #333;
}

.save-btn {
  background-color: #6F4E37;
  color: white;
} 