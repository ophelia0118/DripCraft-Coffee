/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
  justify-content: center;
  align-items: center;
}

.timer-card {
  width: 92%;
  height: 85vh;
  background-color: #FEF6E9;
  border-radius: 30rpx;
  overflow: hidden;
  margin: 40rpx 0;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin: 50rpx 0 60rpx;
  text-align: center;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.timer-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  justify-content: center;
}

.app-title-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 80rpx;
  position: relative;
}

.coffee-icon {
  font-size: 48rpx;
  color: #6F4E37;
  margin: 0 20rpx;
  opacity: 0.8;
}

.app-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #8C5E3B;
  text-align: center;
  letter-spacing: 2rpx;
  margin-bottom: 70rpx;
  font-family: "PingFang SC", "Helvetica Neue", Arial, sans-serif;
}

/* 添加加号按钮样式 */
.add-button {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #E8D4C0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.plus-icon {
  position: relative;
  width: 60rpx;
  height: 60rpx;
}

.plus-icon::before,
.plus-icon::after {
  content: '';
  position: absolute;
  background-color: #2A1506;
}

.plus-icon::before {
  width: 60rpx;
  height: 10rpx;
  top: 25rpx;
  left: 0;
}

.plus-icon::after {
  width: 10rpx;
  height: 60rpx;
  top: 0;
  left: 25rpx;
}

.start-text {
  font-size: 36rpx;
  color: #6F4E37;
  font-weight: bold;
  margin-bottom: 40rpx;
  padding: 26rpx 60rpx;
  background-color: transparent;
  border-radius: 50rpx;
  letter-spacing: 2rpx;
}

.start-text:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(111, 78, 55, 0.2);
}

.card-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: auto;
  margin-bottom: 60rpx;
}

.footer-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #8C7363;
  line-height: 1.8;
  letter-spacing: 1rpx;
}

.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  padding: 30rpx;
  border-radius: 15rpx;
  margin: 0 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}

.action-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #6F4E37;
}
