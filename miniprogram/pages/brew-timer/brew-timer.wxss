/* brew-timer.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: #281815;
  min-height: 100vh;
  color: white;
}

.brew-method-info {
  padding: 20rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.method-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.method-params {
  display: flex;
  justify-content: space-around;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 10rpx;
}

.method-params text {
  background-color: rgba(255, 255, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin: 0 10rpx;
}

.timer-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  position: relative;
}

.total-time {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 15rpx;
  text-align: center;
}

/* 圆环容器，用于定位步骤标记 */
.timer-circle-container {
  position: relative;
  width: 240px;
  height: 240px;
  margin: 20px auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 圆环计时器 */
.timer-circle {
  position: relative;
  width: 220px;
  height: 220px;
  border-radius: 50%;
  background-color: #40312d;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(255, 255, 255, 0.05);
}

/* 进度环 */
.timer-progress-circle {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  opacity: 0.7;
}

/* 时间显示 */
.timer-time {
  font-size: 44px;
  color: #fff;
  z-index: 2;
  font-weight: bold;
}

/* 步骤标记 */
.step-marker {
  position: absolute;
  width: 8px;
  height: 8px;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 50%;
  top: 5px;
  left: 50%;
  transform-origin: 0 105px;
  z-index: 3;
}

/* 激活的步骤标记 */
.active-marker {
  background-color: #d4a26a;
  box-shadow: 0 0 5px #d4a26a;
}

.step-hint {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.step-box {
  background-color: rgba(255, 255, 255, 0.08);
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  text-align: center;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid rgba(212, 162, 106, 0.3);
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
}

.step-name {
  font-size: 30rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.step-instruction {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 10rpx;
}

.water-amount {
  font-size: 28rpx;
  color: #d4a26a;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.step-tips {
  font-size: 24rpx;
  color: rgba(255, 220, 180, 0.8);
  margin-top: 15rpx;
  font-style: italic;
}

.alert-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 6rpx;
}

.timer-controls {
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}

.control-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #40312d;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.control-btn icon {
  display: flex;
  justify-content: center;
  align-items: center;
}

.control-btn.start {
  background-color: #5f4b41;
}

}

/* 时间轴样式 */
.timeline {
  margin-top: 30rpx;
  width: 100%;
  overflow-x: auto;
  padding-bottom: 20rpx;
}

.timeline-container {
  display: flex;
  min-width: 100%;
  padding: 0 20rpx;
}

.timeline-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 1;
}

.timeline-step:not(:last-child)::after {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 50%;
  right: -50%;
  height: 2rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.timeline-step.active:not(:last-child)::after {
  background-color: #F9F1E7;
}

.timeline-point {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  margin-bottom: 10rpx;
}

.timeline-step.active .timeline-point {
  background-color: #F9F1E7;
}

.timeline-time {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 4rpx;
}

.timeline-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  max-width: 100rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.timeline-step.active .timeline-time,
.timeline-step.active .timeline-label {
  color: #F9F1E7;
}

