/* coffee-recipes.wxss */
.container {
  padding: 30rpx;
  padding-top: 150rpx;
  box-sizing: border-box;
  background-color: #faf5ec;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 背景装饰元素 */
.container::before {
  content: "";
  position: absolute;
  top: 120rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: rgba(111, 78, 55, 0.05);
  z-index: 0;
}

.container::after {
  content: "";
  position: absolute;
  bottom: -100rpx;
  left: -100rpx;
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  background: rgba(111, 78, 55, 0.07);
  z-index: 0;
}

/* 页面标题 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
  padding: 0 10rpx;
}

.title-wrapper {
  flex: 1;
  padding-right: 20rpx;
}

.page-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #6F4E37;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  position: relative;
  display: inline-block;
}

.page-title::after {
  content: "";
  position: absolute;
  bottom: -12rpx;
  left: 0;
  width: 60%;
  height: 6rpx;
  background: linear-gradient(to right, #BA8C63, rgba(186, 140, 99, 0.3));
  border-radius: 3rpx;
}

.add-button {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #6F4E37 0%, #BA8C63 100%);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(111, 78, 55, 0.3);
  transition: all 0.3s ease;
  margin-left: 30rpx;
}

.add-button:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 4rpx rgba(111, 78, 55, 0.3);
}

.add-icon {
  color: white;
  font-size: 32rpx;
  margin-right: 10rpx;
  font-weight: bold;
}

.add-text {
  color: white;
  font-size: 28rpx;
  font-weight: 500;
}

/* 配方列表样式 */
.recipe-list {
  padding-bottom: 50rpx;
  position: relative;
  z-index: 1;
}

.recipe-card {
  background-color: white;
  border-radius: 18rpx;
  padding: 34rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
  transform: translateY(0);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.recipe-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.08);
}

.recipe-card::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #6F4E37, #BA8C63);
}

.recipe-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  border-bottom: 1rpx solid #EEEEEE;
  padding-bottom: 20rpx;
}

.recipe-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #6F4E37;
}

.delete-button {
  font-size: 24rpx;
  color: #E64340;
  padding: 10rpx 16rpx;
  background-color: rgba(230, 67, 64, 0.1);
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.delete-button:active {
  background-color: rgba(230, 67, 64, 0.2);
}

.recipe-info {
  font-size: 28rpx;
}

.info-item {
  margin-bottom: 18rpx;
  display: flex;
}

.info-label {
  color: #888;
  width: 160rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.info-value {
  color: #333;
  flex: 1;
}

.create-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 20rpx;
  font-style: italic;
}

/* 无配方提示 */
.empty-state {
  text-align: center;
  padding: 120rpx 50rpx;
  position: relative;
  z-index: 1;
}

.empty-state::before {
  content: "☕";
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
  color: rgba(111, 78, 55, 0.2);
}

.empty-text {
  font-size: 34rpx;
  color: #6F4E37;
  display: block;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.empty-tip {
  font-size: 28rpx;
  color: #BA8C63;
  display: block;
  line-height: 1.6;
}

/* 添加表单样式 */
.add-form {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
  animation: slideIn 0.4s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 50rpx;
  color: #6F4E37;
  position: relative;
}

.form-title::after {
  content: "";
  position: absolute;
  bottom: -16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 4rpx;
  background: linear-gradient(to right, #6F4E37, #BA8C63);
  border-radius: 2rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #6F4E37;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.required:after {
  content: ' *';
  color: #E64340;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #E8E0D8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #FFFFFF;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #BA8C63;
  box-shadow: 0 0 0 3rpx rgba(186, 140, 99, 0.1);
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #E8E0D8;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #FFFFFF;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #BA8C63;
  box-shadow: 0 0 0 3rpx rgba(186, 140, 99, 0.1);
}

/* 自定义选择器样式 */
.form-selector {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #E8E0D8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #FFFFFF;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
  background-image: linear-gradient(to bottom, #FFFFFF, #F9F6F2);
}

.form-selector:active {
  background-color: #F9F6F2;
  background-image: linear-gradient(to bottom, #F9F6F2, #F5EFE9);
  border-color: #BA8C63;
  opacity: 0.9;
}

.selector-content {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
}

.selector-arrow {
  color: #BA8C63;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.custom-input {
  margin-top: 15rpx;
  border: 1rpx dashed #BA8C63 !important;
  background-color: #FFFBF6 !important;
}

.placeholder {
  color: #BBA193;
  opacity: 0.7;
}

.form-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}

.cancel-button, .save-button {
  width: 45%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.cancel-button {
  background-color: #F5F5F5;
  color: #666;
}

.cancel-button:active {
  background-color: #EBEBEB;
}

.save-button {
  background: linear-gradient(135deg, #6F4E37 0%, #BA8C63 100%);
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(111, 78, 55, 0.3);
}

.save-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 4rpx rgba(111, 78, 55, 0.3);
}

/* 返回按钮 */
.back-button {
  position: fixed;
  top: 80rpx;
  left: 30rpx;
  display: flex;
  align-items: center;
  z-index: 10;
  padding: 10rpx 20rpx;
}

.back-icon {
  font-size: 40rpx;
  color: #6F4E37;
  margin-right: 6rpx;
}

.back-text {
  font-size: 28rpx;
  color: #6F4E37;
}

/* 冲泡方法选项列表 */
.brew-methods-options {
  margin-top: 10rpx;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(111, 78, 55, 0.15);
  overflow: hidden;
  position: relative;
  z-index: 5;
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.brew-method-option {
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #F0E8E0;
  transition: all 0.2s ease;
}

.brew-method-option:active {
  background-color: #F9F6F2;
}

.brew-method-option:last-child {
  border-bottom: none;
}

.custom-option {
  color: #BA8C63;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  background-color: #FFFBF6;
}

.custom-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
} 