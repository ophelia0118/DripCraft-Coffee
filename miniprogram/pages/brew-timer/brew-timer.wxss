/* 保存数据模态窗口 */
.save-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.save-modal-container {
  width: 80%;
  background: #2c2018;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.3);
  border: 1px solid #d4a26a;
}

.save-modal-title {
  background: #d4a26a;
  color: #281815;
  padding: 30rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.save-modal-content {
  padding: 40rpx 30rpx;
}

.save-modal-text {
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  color: #fff;
}

.save-modal-brew-info {
  background: rgba(212, 162, 106, 0.1);
  border-radius: 8rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.save-modal-brew-info text {
  font-size: 28rpx;
  color: #e1e1e1;
}

.save-modal-buttons {
  display: flex;
  border-top: 1px solid rgba(212, 162, 106, 0.3);
}

.save-modal-button {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  font-size: 30rpx;
  background: transparent;
  border-radius: 0;
  border: none;
  color: #fff;
  line-height: 1.5;
}

.save-modal-button.cancel {
  border-right: 1px solid rgba(212, 162, 106, 0.3);
  color: #aaa;
}

.save-modal-button.save {
  color: #d4a26a;
  font-weight: 500;
}

.save-modal-button::after {
  border: none;
}

/* 咖啡粉量控制区样式 */
.coffee-amount-control {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 15rpx;
  color: #fff;
}

.amount-adjust {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  margin-left: 10rpx;
}

.btn-decrease, .btn-increase {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.amount-value {
  min-width: 80rpx;
  text-align: center;
  font-size: 32rpx;
  padding: 0 10rpx;
}

.water-amount-display {
  margin-top: 15rpx;
  text-align: center;
  color: #E8C19A;
  font-weight: 500;
}

/* 输入对话框样式 */
.input-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.25s ease, visibility 0.25s ease;
}

.input-dialog.show {
  visibility: visible;
  opacity: 1;
}

.input-dialog.show .dialog-content {
  transform: translateY(0);
  opacity: 1;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(2px);
}

.dialog-content {
  width: 75%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx 30rpx;
  position: relative;
  z-index: 1001;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  transform: translateY(20rpx);
  opacity: 0.9;
  transition: transform 0.25s ease, opacity 0.25s ease;
}

.dialog-title {
  font-size: 34rpx;
  text-align: center;
  margin-bottom: 30rpx;
  color: #111;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.dialog-input-container {
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
  padding: 6rpx 20rpx 16rpx;
}

.dialog-input {
  flex: 1;
  height: 80rpx;
  font-size: 44rpx;
  text-align: center;
  font-weight: 500;
  color: #222;
  margin-top: 4rpx;
}

.dialog-unit {
  font-size: 32rpx;
  color: #666;
  margin-left: 12rpx;
  padding-bottom: 4rpx;
}

.dialog-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 32rpx;
  padding: 0 20rpx;
}

.dialog-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.dialog-btn.cancel {
  background-color: #F6F6F6;
  color: #3A3A3A;
  margin-right: 24rpx;
}

.dialog-btn.confirm {
  background-color: #6F4E37;
  color: white;
  margin-left: 24rpx;
} 
