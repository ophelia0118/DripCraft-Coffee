/* brew-methods.wxss */
.page-container {
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  padding-bottom: 150rpx;
  box-sizing: border-box;
}

/* 顶部区域 */
.header {
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome-area {
  display: flex;
  flex-direction: column;
}

.welcome-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.user-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}

.user-icon open-data {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 50%;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  background-color: #FEF6E9;
  border-radius: 30rpx 30rpx 0 0;
  padding: 40rpx 30rpx 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.methods-grid {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.methods-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  width: 100%;
}

.method-item {
  width: 48%;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.method-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.method-info {
  width: 100%;
  text-align: center;
}

.method-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.method-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 底部按钮 */
.bottom-button {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.add-button-container {
  display: flex;
  align-items: center;
}

.add-button {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #6F4E37;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 15rpx;
}

.add-icon {
  color: #ffffff;
  font-size: 32rpx;
  line-height: 1;
}

.nav-text {
  font-size: 28rpx;
  color: #333;
}

.right-text {
  color: #6F4E37;
  font-weight: bold;
} 