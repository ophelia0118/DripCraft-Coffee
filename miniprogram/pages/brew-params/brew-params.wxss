/* brew-params.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: white;
  min-height: 100vh;
}

.brew-method-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}

.method-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.method-image {
  width: 200rpx;
  height: 200rpx;
}

.guide-link {
  margin-top: 16rpx;
  color: #6F4E37;
  font-size: 28rpx;
  text-align: center;
  text-decoration: underline;
  padding: 6rpx 12rpx;
}

.params-form {
  padding: 0 20rpx;
}

.param-item {
  margin-bottom: 30rpx;
}

.param-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.param-control {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
  height: 80rpx;
}

.btn-decrease, .btn-increase {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  background-color: #f5f5f5;
}

.param-value {
  flex: 1;
  text-align: center;
  font-size: 40rpx;
  position: relative;
}

.param-value:active {
  opacity: 0.7;
}

.param-value::after {
  content: "";
  position: absolute;
  bottom: -5rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 2rpx;
  background-color: #6F4E37;
}

.param-slider {
  margin-top: 20rpx;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.slider-label {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  width: 20%;
}

.selected-grind, .selected-ratio {
  text-align: center;
  margin-top: 10rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #6F4E37;
}

.water-amount {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  margin: 30rpx 0;
}

.auto-calculate {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.auto-calculate text {
  margin-left: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.start-btn {
  width: 90%;
  height: 90rpx;
  background-color: #F9F1E7;
  color: #6F4E37;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx auto;
  box-shadow: 0 4rpx 8rpx rgba(111, 78, 55, 0.1);
}

.science-tooltip {
  background-color: rgba(255, 245, 225, 0.95);
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  border-left: 8rpx solid #6F4E37;
}

.tooltip-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.tooltip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #6F4E37;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999;
}

.tooltip-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

/* 添加推荐参数按钮样式 */
.recommended-params-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto 20rpx;
  padding: 20rpx 30rpx;
  background-color: #F9F3E9;
  border: 1rpx solid #BA8C63;
  border-radius: 40rpx;
  color: #6F4E37;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 6rpx rgba(111, 78, 55, 0.1);
  transition: all 0.2s ease;
}

.recommended-params-btn:active {
  background-color: #F0E4D6;
  transform: scale(0.98);
}

.recommend-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  opacity: 0.8;
}

/* 添加自动填充提示样式 */
.auto-tip {
  font-size: 24rpx;
  color: #BA8C63;
  text-align: center;
  margin-top: 16rpx;
  opacity: 0.8;
  font-style: italic;
}

/* 输入对话框样式 */
.input-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.25s ease, visibility 0.25s ease;
}

.input-dialog.show {
  visibility: visible;
  opacity: 1;
}

.input-dialog.show .dialog-content {
  transform: translateY(0);
  opacity: 1;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(2px);
}

.dialog-content {
  width: 75%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx 30rpx;
  position: relative;
  z-index: 1001;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  transform: translateY(20rpx);
  opacity: 0.9;
  transition: transform 0.25s ease, opacity 0.25s ease;
}

.dialog-title {
  font-size: 34rpx;
  text-align: center;
  margin-bottom: 30rpx;
  color: #111;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.dialog-input-container {
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
  padding: 6rpx 20rpx 16rpx;
}

.dialog-input {
  flex: 1;
  height: 80rpx;
  font-size: 44rpx;
  text-align: center;
  font-weight: 500;
  color: #222;
  margin-top: 4rpx;
}

.dialog-unit {
  font-size: 32rpx;
  color: #666;
  margin-left: 12rpx;
  padding-bottom: 4rpx;
}

.dialog-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 32rpx;
  padding: 0 20rpx;
}

.dialog-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.dialog-btn.cancel {
  background-color: #F6F6F6;
  color: #3A3A3A;
  margin-right: 24rpx;
}

.dialog-btn.confirm {
  background-color: #6F4E37;
  color: white;
  margin-left: 24rpx;
} 