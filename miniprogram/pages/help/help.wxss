/* help.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.help-content {
  flex: 1;
}

.section {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #6F4E37;
  margin-bottom: 20rpx;
}

.section-content {
  font-size: 28rpx;
  color: #333;
}

.help-item {
  margin-bottom: 30rpx;
}

.help-item:last-child {
  margin-bottom: 0;
}

.help-title {
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.help-desc {
  color: #666;
  line-height: 1.6;
} 